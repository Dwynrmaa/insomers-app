<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PENCATAT TIDUR"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tv_sleep_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waktu Tidur: Belum dicatat"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_select_sleep_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Waktu Tidur"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_button"/>


    <TextView
        android:id="@+id/tv_wake_up_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Waktu Bangun: Belum dicatat"
        android:layout_marginBottom="16dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_select_wake_up_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Waktu Bangun"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_button"/>

    <Button
        android:id="@+id/btn_record_sleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Catat Waktu Tidur"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:textAllCaps="false"
        android:background="@drawable/background_button"/>

    <TextView
        android:id="@+id/tv_sleep_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durasi Tidur: - jam"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_view_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:text="Lihat Riwayat Tidur"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>
